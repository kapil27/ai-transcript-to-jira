# JIRA Integration Configuration
# Copy this file to .env and fill in your actual values

# JIRA Instance Configuration
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your_generated_api_token_here
JIRA_PROJECT_KEY=PROJ

# JIRA Behavior Settings (optional)
JIRA_SIMILARITY_THRESHOLD=0.85
JIRA_MAX_SEARCH_RESULTS=50

# Application Configuration
DEBUG=false
HOST=127.0.0.1
PORT=5000
SECRET_KEY=your-secret-key-here

# AI Configuration
OLLAMA_MODEL=llama3.1:latest
OLLAMA_URL=http://localhost:11434
OLLAMA_TIMEOUT=120

# Processing Limits
MAX_TASKS=10
MAX_QUESTIONS=8
MAX_TRANSCRIPT_LENGTH=50000

# MCP Configuration (advanced)
MCP_ATLASSIAN_URL=mcp://atlassian
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_CACHE_TTL=300

# Legacy Configuration (for backward compatibility)
DEFAULT_REPORTER=meeting@example.com